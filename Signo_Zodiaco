
Console.WriteLine("Hola, ¿Cuál es tu nombre?");
string nombre = Console.ReadLine();

Console.WriteLine("¿En qué mes naciste? (1-12)");
int mes = int.Parse(Console.ReadLine());

Console.WriteLine("¿En qué día naciste?");
int dia = int.Parse(Console.ReadLine());

if (mes == 1)
{
    if (dia >= 20)
    {
        Console.WriteLine(nombre + ", tu signo zodiacal es Acuario");
    }
    else
    {
        Console.WriteLine(nombre + ", tu signo zodiacal es Capricornio");
    }
}
else
{

    if (mes == 2)
    {
        if (dia >= 19)
        {
            Console.WriteLine(nombre + ", tu signo zodiacal es Piscis");
